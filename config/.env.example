# -*- coding: utf-8 -*-
"""
环境变量配置文件示例

复制此文件为 .env 并根据实际情况修改配置
"""

# 项目基础配置
PROJECT_NAME=File Management System
VERSION=1.0.0
DEBUG=True

# 服务器配置
SERVER_HOST=0.0.0.0
API_PORT=9988

# 数据库配置
DATABASE_URL=sqlite:///data/database/file_management.db
KNOWLEDGE_GRAPH_URL=sqlite:///data/database/knowledge_graph.db
VECTOR_DB_PATH=data/vector_db

# 文件存储配置
UPLOAD_DIR=data/file_storage
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.rtf,.html,.htm,.csv,.json,.xml,.md

# 日志配置
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_TO_FILE=True
LOG_TO_CONSOLE=True

# AI模型配置
CHINESE_EMBEDDING_MODEL_NAME=bge-base-zh-v1.5
ENGLISH_EMBEDDING_MODEL_NAME=multilingual-MiniLM-L12-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Ollama配置
OLLAMA_MODEL=deepseek-r1:1.5b
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI配置
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=

# LM Studio配置
LMSTUDIO_MODEL=
LMSTUDIO_BASE_URL=http://127.0.0.1:1234
